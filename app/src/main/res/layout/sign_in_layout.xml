<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"

        android:gravity="center" android:background="@color/colorPrimary">

    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:gravity="center_horizontal">
        <ImageView android:contentDescription="App Logo" android:layout_width="wrap_content" android:layout_height="wrap_content"
                   app:srcCompat="@drawable/rmp_icon_light_128"/>
        <TextView android:textColor="#FFFFFF" android:gravity="center" android:text="@string/description_text" android:layout_width="match_parent" android:layout_marginBottom="20sp" android:layout_height="wrap_content"/>

        <Button android:onClick="signIn" android:id="@+id/btnSignIn" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/sign_in"/>

    </LinearLayout>

</RelativeLayout>